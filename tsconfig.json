{
    "compilerOptions": {
        "outDir": "./built/",
        "noImplicitAny": true,
        "declaration": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["dom", "es2018"]
    },
    "include": ["src/**/*"]
}
